@require 'constants.styl'

bg-color = linear-gradient(-20deg, empColor1 0%, bgColor1 70%)
link-decoration-color = #d2825c
link-decoration-color-hover = #fdc57c
visited-link-color = #b17bc3
hr-color = linear-gradient(90deg, transparent, empColor1, transparent)


html
    overflow-x hidden

*
    box-sizing border-box

body
    margin 0
    width 100vw
    min-height 100vh
    position relative
    color textColor1
    background bg-color
    animation bg-move 3s ease normal forwards
    overflow-x hidden

a
    text-decoration none
    color textColor1
    transition color 0.2s ease
.link a
a.link
    color link-decoration-color
.link a:hover
a.link:hover
    color link-decoration-color-hover


hr
    height 2px
    border none
    background hr-color


#app
    width 100%
    height 100%

    .flex-root
        top-bar-height = 70px

        min-height "calc(100vh - %s)" % top-bar-height
        display flex
        flex-direction column

        .app-flex-filler
            flex 1



.text-lighting
    text-shadow textLightingHigh

.text-big-xx
    text-shadow textLightingHigh2
    font-size 40px
    font-family Arial, monospace
    color textColor1

.text-big-x
    text-shadow textLightingNormal1
    font-size 30px
    font-family Roboto, monospace
    color textColor1

.text-big
    text-shadow textLightingNormal1
    font-size 20px
    font-family Roboto, monospace
    color textColor2

.text-middle
    text-shadow textLightingNormal2
    font-size 18px
    font-family Roboto, monospace
    color textColor2

.text-small
    text-shadow none
    font-size 15px
    font-family Arial, monospace
    color textColor3

.text-small-x
    text-shadow none
    font-size 13px
    font-family Arial, monospace
    color textColor4


@keyframes bg-move
    from
        background-position 100%
        background-size 1000%

    to
        background-position 0
        background-size 300%


.pc-hide
    display none
@media ({mobile})
    .mobile-hide
        display none
    .pc-hide
        display block

