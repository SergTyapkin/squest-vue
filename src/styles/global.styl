@import 'constants.styl'
@import 'fonts.styl'

bg-color = linear-gradient(-20deg, empColor1 0%, empColor6 20%, bgColor1 70%, bgColor0 100%)
link-decoration-color = #d2825c
link-decoration-color-hover = #fdc57c
visited-link-color = #b17bc3
hr-color = linear-gradient(90deg, transparent, empColor1, transparent)


html
  overflow-x hidden

*
  box-sizing border-box


body
  position relative
  overflow-x hidden
  width 100vw
  min-height 100vh
  margin 0
  font-family monospace
  color textColor1
  background bg-color
  animation bg-move 3s ease normal forwards

a
  color textColor1
  text-decoration none
  transition color 0.2s ease

hr
  height 2px
  background hr-color
  border none


#app
  width 100%
  height 100%

  .flex-root
    display flex
    flex-direction column
    min-height "calc(100vh - %s)" % top-bar-height
    top-bar-height = 70px

    .app-flex-filler
      flex 1

.text-big-xx
  font-large()
  font-special()

  color textColor1
  text-shadow textLightingHigh2

  @media ({mobile})
    text-shadow textLightingNormal1

.text-big-x
  font-medium-large()
  font-special()

  color textColor1
  text-shadow textLightingNormal1

  @media ({mobile})
    text-shadow textLightingNormal1

.text-big
  font-medium()

  color textColor2

.text-middle
  font-medium-small()

  color textColor2

.text-small
  font-small()

  color textColor3

.text-small-x
  font-small-extra()

  color textColor4


@keyframes bg-move
  from
    background-position 100%
    background-size 1000%

  to
    background-position 0
    background-size 300%


.pc-hide
  display none

@media ({mobile})
  .mobile-hide
    display none
  .pc-hide
    display block

a
.link
  color link-decoration-color
a:hover
.link:hover
  color link-decoration-color-hover
  transition all 0.3s ease
