@import 'constants.styl'
@import 'fonts.styl'

.button
  font-small()
  font-special()

  cursor pointer
  display flex
  align-items center
  justify-content center
  box-sizing border-box
  padding 10px
  text-align center
  text-shadow none
  background linear-gradient(90deg,rgba(71,56,20,0.4),rgba(84,69,25,0.7))
  border 1px solid secColor1
  outline rgb(141, 112, 60) solid 1px
  box-shadow 5px 5px 5px colorShadow
  transition all 0.2s ease

  @media ({mobile})
    box-shadow none
.button.half-height
  padding 0 10px
.button.bg
  background linear-gradient(20deg, rgba(45, 36, 13, 0.4) 0%, rgba(90, 56, 25, 0.7) 50%, rgba(55, 43, 16, 0.4) 100%)
.button.rounded
  border-radius 5px


.button:hover
  text-shadow textLightingNormal1
  box-shadow 0 0 15px rgb(255, 235, 164)


.button.outline
  outline-offset 0
  transition all 1s cubic-bezier(0.19, 1, 0.22, 1)
.button.outline:hover
  outline-color transparent
  outline-offset 15px
